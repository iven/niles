{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Filter Results",
  "description": "RSS 条目分类结果",
  "type": "object",
  "required": ["source_name", "source_url", "results"],
  "additionalProperties": false,
  "properties": {
    "source_name": {
      "type": "string",
      "description": "RSS 源名称"
    },
    "source_url": {
      "type": "string",
      "description": "RSS 源 URL"
    },
    "results": {
      "type": "object",
      "description": "分类结果,key 为 guid",
      "additionalProperties": {
        "type": "object",
        "required": ["title", "type", "reason"],
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string",
            "description": "条目标题"
          },
          "type": {
            "type": "string",
            "enum": ["high_interest", "interest", "other", "exclude"],
            "description": "分类类型"
          },
          "reason": {
            "type": "string",
            "description": "分类原因"
          },
          "description": {
            "type": "string",
            "description": "HTML 格式的总结"
          }
        }
      }
    }
  }
}
