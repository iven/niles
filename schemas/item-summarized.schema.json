{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RSS Item",
  "description": "单个 RSS 条目",
  "type": "object",
  "required": ["guid", "title", "link", "pubDate", "description"],
  "additionalProperties": false,
  "properties": {
    "guid": {
      "type": "string",
      "description": "条目唯一标识"
    },
    "title": {
      "type": "string",
      "description": "翻译后的标题"
    },
    "link": {
      "type": "string",
      "description": "条目链接"
    },
    "pubDate": {
      "type": "string",
      "description": "发布时间"
    },
    "description": {
      "type": "string",
      "description": "HTML 格式的总结"
    }
  }
}
