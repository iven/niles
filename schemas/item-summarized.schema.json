{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summarized RSS Item",
  "description": "总结后的 RSS 条目（仅包含总结字段）",
  "type": "object",
  "required": ["guid", "title", "description"],
  "additionalProperties": false,
  "properties": {
    "guid": {
      "type": "string",
      "description": "条目唯一标识"
    },
    "title": {
      "type": "string",
      "description": "总结后的标题（使用首选语言）"
    },
    "description": {
      "type": "string",
      "description": "HTML 格式的总结"
    }
  }
}
