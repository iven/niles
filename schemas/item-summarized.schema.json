{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Summarized RSS Item",
  "description": "总结后的 RSS 条目（仅包含翻译和总结字段）",
  "type": "object",
  "required": ["guid", "title", "description"],
  "additionalProperties": false,
  "properties": {
    "guid": {
      "type": "string",
      "description": "条目唯一标识"
    },
    "title": {
      "type": "string",
      "description": "翻译后的标题"
    },
    "description": {
      "type": "string",
      "description": "HTML 格式的总结"
    }
  }
}
